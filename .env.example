# Merlin Website Cloner - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# SECURITY (REQUIRED FOR PRODUCTION!)
# ============================================

# JWT Secret - Generate a strong random string (min 32 chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token expiration (default: 7d)
JWT_EXPIRES_IN=7d

# ============================================
# SERVER CONFIGURATION
# ============================================

# Server port
PORT=3000

# Node environment
NODE_ENV=development

# Allowed CORS origins (comma-separated)
# In production, set this to your actual domain(s)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# STRIPE PAYMENTS (Optional)
# ============================================

# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs for each plan
STRIPE_STARTER_PRICE_ID=price_xxxxx
STRIPE_PRO_PRICE_ID=price_xxxxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxxxx

# ============================================
# DATABASE (PostgreSQL via Prisma)
# ============================================

# PostgreSQL connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Examples:
#   Local: postgresql://postgres:password@localhost:5432/merlin
#   Docker: postgresql://postgres:password@db:5432/merlin
#   Cloud: postgresql://user:pass@host.neon.tech:5432/merlin?sslmode=require
DATABASE_URL=postgresql://postgres:password@localhost:5432/merlin

# ============================================
# REDIS (For job queues)
# ============================================

REDIS_URL=redis://localhost:6379

# ============================================
# PROXY CONFIGURATION (Optional)
# ============================================

# For residential proxies
# PROXY_HOST=proxy.example.com
# PROXY_PORT=8080
# PROXY_USERNAME=user
# PROXY_PASSWORD=pass

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=info
