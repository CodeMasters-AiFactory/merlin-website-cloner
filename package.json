{
  "name": "merlin-website-clone",
  "version": "1.0.0",
  "description": "World's #1 website cloner for complete offline backups",
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "dev": "node start-dev.js",
    "dev:old": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "tsx watch src/server/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "node dist/server/index.js",
    "start:all": "concurrently \"npm start\" \"cd frontend && npm run dev\"",
    "cli": "tsx src/cli.ts",
    "test": "vitest",
    "test:comprehensive": "tsx src/test/comprehensive-test.ts",
    "test:benchmark": "tsx src/test/benchmark-test.ts",
    "test:cloudflare": "tsx src/test/cloudflare-benchmark.ts",
    "test:cloudflare:quick": "tsx src/test/cloudflare-benchmark-quick.ts",
    "install:all": "npm install && cd frontend && npm install"
  },
  "bin": {
    "merlin-clone": "./dist/cli.js"
  },
  "keywords": [
    "website-cloner",
    "backup",
    "offline",
    "scraper"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@stripe/stripe-js": "^8.6.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "archiver": "^6.0.1",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.66.0",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "fs-extra": "^11.2.0",
    "helmet": "^8.1.0",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "mime-types": "^2.1.35",
    "node-fetch": "^3.3.2",
    "p-limit": "^4.0.0",
    "pino": "^10.1.0",
    "prom-client": "^15.1.3",
    "puppeteer": "^21.6.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-anonymize-ua": "^2.4.6",
    "puppeteer-extra-plugin-block-resources": "^2.4.3",
    "puppeteer-extra-plugin-recaptcha": "^3.6.8",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "redis": "^5.10.0",
    "sharp": "^0.33.5",
    "stripe": "^20.1.0",
    "winston": "^3.19.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.4",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/fs-extra": "^11.0.4",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.10.6",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
