{
  "permissions": {
    "allow": [
      "Bash",
      "mcp__puppeteer",
      "mcp__fetch",
      "mcp__brave-search",
      "mcp__sqlite",
      "mcp__filesystem",
      "Bash(timeout:*)",
      "Bash(ping:*)",
      "Bash(tasklist:*)",
      "Bash(node -e:*)"
    ],
    "defaultMode": "bypassPermissions"
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '=== MERLIN STARTUP ===' && cd 'c:/Cursor Projects/Mirror Site' && (curl -s http://localhost:3000/api/health > /dev/null 2>&1 && echo 'Servers already running' || (echo 'Starting servers...' && npm run dev &))",
            "timeout": 10,
            "statusMessage": "Checking Merlin servers..."
          }
        ]
      }
    ]
  }
}
